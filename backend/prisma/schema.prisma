generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(100)
  email      String    @unique @db.VarChar(255)
  password   String    @db.VarChar(100)
  role       Role
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  donor      Donor?
  ong        Ong?
  admin      Admin?

  @@map("users")
}

model Donor {
  cpf       String @unique @db.VarChar(14)
  userId    Int    @id @unique 
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  donations Donation[]

  @@map("donors")
}

model Ong {
  cnpj        String   @unique @db.VarChar(18)
  isVerified  Boolean  @default(false)
  userId      Int      @id @unique 
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  donations   Donation[]

  @@map("ongs")
}

model Admin {
  userId  Int   @id @unique 
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

enum Role {
  donor
  ong
  admin
}

model Donation {
  id                  Int             @id @default(autoincrement())
  donationType        DonationType
  donationStatus      DonationStatus  @default(pending)
  monetaryAmount      Float?
  monetaryCurrency    String?         @db.VarChar(3)
  materialDescription String?
  materialQuantity    Int?
  donorId             Int
  ongId               Int
  donor               Donor           @relation(fields: [donorId], references: [userId], onDelete: Cascade) // NOVO: Referência a 'userId'
  ong                 Ong             @relation(fields: [ongId], references: [userId], onDelete: Cascade)   // NOVO: Referência a 'userId'
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@map("donations")
}

enum DonationStatus {
  pending
  completed
  cancelled
}

enum DonationType {
  monetary
  material
}